{
  "family": "itgenius-microservice-ecs-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::762233764391:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::762233764391:role/ecsTaskExecutionRole",
  "containerDefinitions": [
  {
    "name": "itgenius-microservice-ecs-app-dev",
    "image": "762233764391.dkr.ecr.us-east-1.amazonaws.com/itgenius-microservice-ecs-app-dev-repo:V001",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8085,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/itgenius-microservice-ecs-app-dev",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "secrets": [
      {
        "name": "DB_USERNAME",
        "valueFrom": "arn:aws:secretsmanager:us-east-1:762233764391:secret:itgenius-db-secret-u61YQB:username::"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "arn:aws:secretsmanager:us-east-1:762233764391:secret:itgenius-db-secret-u61YQB:password::"
      }
    ],
    "environment": [
      {
        "name": "DB_URL",
        "value": "jdbc:mysql://itgeniusdb.cepa48wa8kv8.us-east-1.rds.amazonaws.com:3306/itgeniusdb"
      }
    ]
  }
]

}
